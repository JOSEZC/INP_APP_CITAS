<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/naranja</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="input_style">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/gris1</item>
        <item name="android:textSize">14sp</item>


        <item name="android:background">@drawable/input_style</item>
    </style>

    <style name="texto_style">

        <item name="android:textStyle">bold</item>
    </style>





    <style name="customtheme" parent="@android:style/Theme.Light">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>
    <style name="SpinnerItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/my_rectangle</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/my_rectangle</item>
    </style>






    <style name="texto_registro_style">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">8dp</item>

        <item name="android:gravity">right</item>
        <item name="android:layout_width">77dp</item>
    </style>

    <!-- MIS CITAS -->


    <style name="texto_nombre_medico">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">3dp</item>



    </style>
    <style name="texto_nombre_especialidad">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/amarillo</item>
        <item name="android:text"></item>

    </style>
    <style name="texto_nombre_especialidad_lista">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/amarillo</item>
        <item name="android:text"></item>

    </style>

    <style name="texto_descripcion_cita">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">3dp</item>



    </style>


    <style name="button_citas">


        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_form</item>
        <item name="android:left">10sp</item>





    </style>

    <style name="link_style">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/naranja2</item>
    </style>

    <style name="layout_form">

        <item name="android:padding">10dp</item>

    </style>

    <style name="button_login_style">

        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">45dp</item>

        <item name="android:background">@drawable/button_login_style</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
