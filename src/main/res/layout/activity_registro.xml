<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="#F9F7F7"
    android:paddingBottom="0dp"

    tools:context="com.example.josezc.inp_cm.Usuario_Registro_View">

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="460dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"

        android:background="@color/fondo_am"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            style="@style/layout_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_dni"
                style="@style/texto_registro_style"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DNI:" />


            <EditText
                android:id="@+id/input_dni"
                style="@style/input_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:textAlignment="center">


            <TextView
                android:id="@+id/textView8"
                style="@style/texto_registro_style"
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Sexo:" />

            <CheckBox
                android:id="@+id/input_sexo"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Masculino" />

            <CheckBox
                android:id="@+id/input_sexo2"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Femenino" />

        </LinearLayout>

        <LinearLayout
            style="@style/layout_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/txt_nombres"
                style="@style/texto_registro_style"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nombres:" />

            <EditText
                android:id="@+id/input_nombres"
                style="@style/input_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_apellido_paterno"
                style="@style/texto_registro_style"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ap. Paterno:" />

            <EditText
                android:id="@+id/input_apellido_paterno"
                style="@style/input_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/txt_apellido_materno"
                style="@style/texto_registro_style"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ap. Materno:" />

            <EditText
                android:id="@+id/input_apellido_materno"
                style="@style/input_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_dia"
                style="@style/texto_registro_style"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Dia:" />

            <EditText
                android:id="@+id/input_dia"
                style="@style/input_style"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_mes"
                style="@style/texto_registro_style"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mes:" />

            <EditText
                android:id="@+id/input_mes"
                style="@style/input_style"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10" />

            <TextView

                android:id="@+id/txt_año"
                style="@style/texto_registro_style"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Año:" />

            <EditText
                android:id="@+id/input_anio"
                style="@style/input_style"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="datetime|date" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/txt_correo"
                style="@style/texto_registro_style"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Correo:" />

            <EditText
                android:id="@+id/input_correo"
                style="@style/input_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout
            style="@style/layout_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/txt_password"
                style="@style/texto_registro_style"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Contraseña:" />

            <EditText
                android:id="@+id/input_password"
                style="@style/input_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button

                android:id="@+id/btn_registrar"
                style="@style/button_login_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Registrar" />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
