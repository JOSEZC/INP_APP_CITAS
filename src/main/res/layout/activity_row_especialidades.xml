<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:padding="5dp"
    android:background="@drawable/contenedor_especialidad"
    tools:context="com.example.josezc.inp_cm.row_especialidades">

    <ImageView
        android:id="@+id/icon_especialidad"
        android:layout_width="69dp"
        android:layout_height="32dp"
        android:layout_weight="1"

        app:srcCompat="@drawable/heart_outlined" />

    <TextView
        android:id="@+id/texto_nombre_especialidad_lista"
        style="@style/texto_nombre_especialidad_lista"

        android:layout_width="365dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:text="CARDIOLOGIA" />

</LinearLayout>
